<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DouApp"
             x:Class="DouApp.App">
    <Application.Resources>
        <x:String x:Key="formatDate">{0:d}</x:String>
        <local:NegateBooleanConverter x:Key="boolInverter"/>
        <x:String x:Key="PageBackgroundColor">#002060</x:String>
        <Style x:Key="pageStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}" />
        </Style>
        <Style BasedOn="{StaticResource pageStyle}" TargetType="ContentPage" ApplyToDerivedTypes="True" />
    </Application.Resources>
</Application>